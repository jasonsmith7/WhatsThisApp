<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorBackground">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logov1"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/home_ask1"
                android:id="@+id/askButton"
                android:background="@drawable/my_button"

                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"

                app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/home_answer3"
                android:id="@+id/answerButton"
                android:background="@drawable/my_button"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@+id/askButton"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/home_explore1"
                android:background="@drawable/my_button"
                android:id="@+id/exploreButton"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toBottomOf="@+id/answerButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>