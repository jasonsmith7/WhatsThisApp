<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:screenOrientation="portrait"
        android:background="@drawable/bgv2">
    <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home_ask1"
            android:id="@+id/askButton"
            android:background="@drawable/my_button2"
            android:foregroundGravity="center_horizontal"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"></ImageButton>
    <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home_answer2"
            android:id="@+id/answerButton"
            android:background="@drawable/my_button2"

            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.881"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/home_explore2"
            android:background="@drawable/my_button2"
            android:id="@+id/exploreButton"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.752" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
</android.support.constraint.ConstraintLayout>