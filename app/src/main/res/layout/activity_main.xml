<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:screenOrientation="portrait"
        android:background="@drawable/bgv2green" android:id="@+id/content">
    <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home_ask4"
            android:id="@+id/askButton"
            android:background="@drawable/my_button2"
            android:foregroundGravity="center_horizontal"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"></ImageButton>
    <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home_answer4"
            android:id="@+id/answerButton"
            android:background="@drawable/my_button2"

            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="@+id/askButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/home_explore4"
            android:background="@drawable/my_button2"
            android:id="@+id/exploreButton"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="164dp" app:layout_constraintTop_toTopOf="@+id/askButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="171dp"
            android:layout_height="97dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="Pick A Color!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#fff"
                android:id="@+id/colorText" android:fontFamily="@font/arvo_bold"
                android:textStyle="bold" android:textSize="18sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
        >
            <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/bpink"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bTheme"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bred"
                    android:padding="10dp"
                    android:id="@+id/rTheme"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:background="@drawable/bgreen"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gTheme"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>