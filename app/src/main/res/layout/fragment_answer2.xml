<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"

             tools:context=".AnswerFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:background="@drawable/border"
                android:ems="10"
                android:id="@+id/editText4"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <ImageButton
                    android:layout_width="155dp"
                    android:layout_height="83dp"
                    app:srcCompat="@drawable/accept"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/acceptButton4" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/navigation"
                    android:visibility="visible" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="155dp"
                    android:layout_height="83dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    app:srcCompat="@drawable/cancel"
                    android:id="@+id/cancelButton4"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@+id/navigation"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp" android:visibility="visible" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>