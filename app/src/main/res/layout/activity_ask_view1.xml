<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AskView1">

    <ImageView
            android:layout_width="417dp"
            android:layout_height="273dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="#e72c22"
            app:itemTextColor="#000"
            app:itemIconTint="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <Button
            android:text="Take a Picture!"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:id="@+id/camera_button"
            android:background="@drawable/mybutton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"
            android:radius="3dip"

            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
    />
    <ImageView
            android:layout_width="257dp"
            android:layout_height="80dp" app:srcCompat="@drawable/logov1"
            android:id="@+id/imageView4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="77dp" android:layout_marginStart="77dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="77dp" android:layout_marginRight="77dp"/>

    <EditText
            android:layout_width="373dp"
            android:layout_height="91dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp" app:layout_constraintTop_toBottomOf="@+id/image_view"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Explain your photo!" android:visibility="visible"/>
    <ImageButton
            android:layout_width="155dp"
            android:layout_height="83dp" app:srcCompat="@drawable/accept"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:id="@+id/acceptButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="155dp"
            android:layout_height="83dp" app:srcCompat="@drawable/cancel"
            android:id="@+id/cancelButton" android:layout_marginBottom="20dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/navigation"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>