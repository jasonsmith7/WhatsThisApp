<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AskView1">

    <ImageView
            android:layout_width="417dp"
            android:layout_height="374dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"/>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>
    <Button
            android:text="Take a Picture!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp"
            app:layout_constraintHorizontal_bias="0.51" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/navigation"/>
    <ImageView
            android:layout_width="257dp"
            android:layout_height="80dp" app:srcCompat="@drawable/logov1"
            android:id="@+id/imageView4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="77dp" android:layout_marginStart="77dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="77dp" android:layout_marginRight="77dp"/>
    <EditText
            android:layout_width="373dp"
            android:layout_height="91dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp" app:layout_constraintTop_toBottomOf="@+id/image_view"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:hint="Explain your photo!"/>

</android.support.constraint.ConstraintLayout>