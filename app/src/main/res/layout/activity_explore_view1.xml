                            android:gravity="left"
                            android:textSize="16dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/textView3" android:fontFamily="@font/allerta"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@drawable/border"
                        android:layout_height="match_parent">
                    <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="150dp"
                            app:srcCompat="@drawable/placeholder"
                            android:background="@drawable/border"
                            android:layout_weight="0.9"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/postImage4"/>
                    <Button
                            android:text="TextView"
                            android:layout_width="80dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:gravity="left"
                            android:textSize="16dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/textView4" android:fontFamily="@font/allerta"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            app:itemTextColor="@drawable/bottom_nav"
            app:itemIconTint="@drawable/bottom_nav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation_ask"/>

</android.support.constraint.ConstraintLayout>