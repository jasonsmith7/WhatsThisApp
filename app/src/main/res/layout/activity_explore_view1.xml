                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:gravity="left"
                            android:textSize="16dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/textView8" android:fontFamily="@font/allerta"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/mybutton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="150dp" app:srcCompat="@drawable/placeholder"
                            android:layout_weight="0.9"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/postImage1"/>
                    <Button
                            android:text="TextView"
                            android:layout_width="80dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:gravity="left"
                            android:textSize="16dp"
                            android:scaleType="fitCenter"
                            android:id="@+id/textView" android:fontFamily="@font/allerta"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@drawable/mybutton3"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="150dp" app:srcCompat="@drawable/placeholder"
                            android:layout_weight="0.9"
                            android:padding="10dp"
                            android:scaleType="fitCenter" android:id="@+id/postImage2"/>
                    <Button
                            android:text="TextView"
                            android:layout_width="80dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
